{
  "hosting": {
    "public": ".next",
    "ignore": [
      "firebase.json", 
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "ssrcampuscworking",
        "region": "us-central1"  // ‚Üê CHANGE TO us-central1
      }
    ],
    "headers": [
      {
        "source": "**", 
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=3600"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": ".",
    "codebase": "firebase-frameworks-campusc-working", 
    "runtime": "nodejs20"
  }
}
